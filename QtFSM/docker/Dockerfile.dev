# Development Dockerfile (for reference/documentation)
# This documents the exact development environment
# Not intended for actual development use (use native Qt Creator instead)

FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive
ENV QT_VERSION=6.5

# Install all development dependencies
RUN apt-get update && apt-get install -y \
    # Build tools
    build-essential \
    cmake \
    ninja-build \
    git \
    ccache \
    # Qt6
    qt6-base-dev \
    qt6-tools-dev \
    qt6-tools-dev-tools \
    libqt6core6 \
    libqt6gui6 \
    libqt6widgets6 \
    libgl1-mesa-dev \
    libglu1-mesa-dev \
    # Development tools
    gdb \
    valgrind \
    clang-tidy \
    clang-format \
    cppcheck \
    # Editor (optional)
    vim \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /workspace

CMD ["/bin/bash"]
